{% extends "main.twig" %}
{% import "user/macros.twig" as macrosuser %}
{% block menu %}
	{{ include('menu.twig') }}
{% endblock %}
{% block content %}

		<div class="container">
			<h1>{{getText('Create a new user')}}</h1>

			<form id="newuser" action="/user/add" id="formuploadcert" enctype="multipart/form-data" method="post">
				<div class="form-group row">
					<label for="firstname" class="col-sm-4 col-form-label">{{getText('Firstname')}}</label>
					<div class="col-sm-8">
						<input id="firstname" type="text" name="firstname" class="form-control" placeholder="" value="" autocomplete="username">
					</div>
				</div>
				<div class="form-group row">
					<label for="lastname" class="col-sm-4 col-form-label">{{getText('Lastname')}}</label>
					<div class="col-sm-8">
						<input id="lastname" type="text" name="lastname" class="form-control" placeholder="" value="" autocomplete="username">
					</div>
				</div>
				<div class="form-group row">
					<label for="login_new" class="col-sm-4 col-form-label">{{getText('Login')}}</label>
					<div class="col-sm-8">
						<input id="login_new" type="text" name="login" class="form-control" placeholder="" value="" autocomplete="username">
						<div class="invalid-feedback">
							{{ getText('Login already used') }}
						</div>
					</div>
				</div>
				{{ macrosuser.passwordfield(0) }}


				<div class="form-group row">
					<div class="col-sm-10">
						<input type="submit" class="btn btn-primary" value="{{getText('Submit')}}">
					</div>
				</div>

			</form>

		</div>
		<script src="/js/settings_users.js" type="text/javascript"></script>

{% endblock %}
{% block footer %}{% endblock %}
